<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">



    <EditText
        android:id="@+id/cameraOn"
        android:hint="camera ON or OFF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/FoodAmountG"
        android:hint="Food amount in grams"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cameraOn"/>

    <EditText
        android:id="@+id/FeedTimeG"
        android:hint="Feeding time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/FoodAmountG"/>

    <EditText
        android:id="@+id/speakerOn"
        android:hint="Speaker ON or OFF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/FeedTimeG"/>

    <EditText
        android:id="@+id/MicrophoneOn"
        android:hint="Microphone ON or OFF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/speakerOn"/>

    <Button
        android:id="@+id/action_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="17dp"
        android:layout_marginTop="247dp"
        android:text="Cancel" />

    <Button
        android:id="@+id/action_ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="248dp"
        android:layout_marginEnd="48dp"
        android:text="OKAY" />

</RelativeLayout>